<h1>New Game</h1>

<div class="d-flex">
  <% @letters.each do |letter| %>
    <p><%= letter %></p>
  <% end %>
</div>

<form action="/score" method="GET" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="word">What's the longest word you can find?</label>
  <div class="input-group">
    <input type="text" class="form-control" name="word" aria-label="Recipient's username" aria-describedby="button-addon2">
    <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Play!</button>
  </div>
</form>
